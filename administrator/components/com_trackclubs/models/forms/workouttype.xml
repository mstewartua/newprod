<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_trackclubs/models/rules"
	addfieldpath="/administrator/components/com_trackclubs/models/fields"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="date_created"
			type="hidden"
		/>
		<field
			name="user_created"
			type="hidden"
		/>
		<field
			class="inputbox title"
			default=""
			description=""
			label="Title"
			name="title"
			size="40"
			type="text"
		/>
		<field
			default=""
			description=""
			label="Description"
			name="description"
			filter="safehtml"
			width="300"
			type="editor"
		/>
		<field
			class="inputbox validate-active"
			default="1"
			description=""
			label="Active"
			name="active"
			required="true"
			size="40"
			type="checkbox"
			validate="active"
		/>
	</fieldset>
</form>