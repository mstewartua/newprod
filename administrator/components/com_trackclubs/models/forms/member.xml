<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_trackclubs/models/rules"
	addfieldpath="/administrator/components/com_trackclubs/models/fields"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="date_created"
			type="hidden"
		/>
		<field
			name="user_created"
			type="hidden"
		/>
		<field
			class="inputbox lastname"
			default=""
			description=""
			label="Last name"
			name="lastname"
			size="40"
			type="text"
		/>
		<field
			class="inputbox firstname"
			default=""
			description=""
			label="First name"
			name="firstname"
			size="40"
			type="text"
		/>
		<field
			default=""
			description=""
			label="Date of birth"
			name="dob"
			format="%Y-%m-%d"
			type="calendar"
		/>
		<field
			class="inputbox gender"
			default=""
			description=""
			label="Gender"
			name="gender"
			size="40"
                        type="list">
                
                        <option value="M">Male</option>
                        <option value="F">Female</option>
		</field>
		<field
			class="inputbox photoid"
			default=""
			description=""
			label="Photo ID"
			name="photoid"
			size="40"
			type="text"
		/>
		<field
			class="inputbox validate-active"
			default="1"
			description=""
			label="Active"
			name="active"
			required="true"
			size="40"
			type="list"
                        validate="active">
                    
                        <option value="0">No</option>
                        <option value="1">Yes</option>
                </field>
		<field
			default=""
			description=""
			label="Expiration date"
			name="expirationdate"
			format="%Y-%m-%d"
			type="calendar"
		/>
		<field
			class="inputbox validate-newmember"
			default="0"
			description=""
			label="New member"
			name="newmember"
			required="true"
			size="40"
			type="list"
                        validate="newmember">
                
                        <option value="0">No</option>
                        <option value="1">Yes</option>
                </field>
		<field
			class="inputbox validate-staff"
			default="0"
			description=""
			label="Staff"
			name="staff"
			required="true"
			size="40"
			type="list"
                        validate="staff">
                    
                        <option value="0">No</option>
                        <option value="1">Yes</option>
                </field>
	</fieldset>
</form>